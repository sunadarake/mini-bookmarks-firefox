{
  "manifest_version": 2,
  "name": "mini bookmarks",
  "description": "Small, but excellent in searchability, another bookmark.",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon_48.png"
  },
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs"
  ]
}